<!DOCTYPE html>
<html>
  <head>
    <title>OpenExonaut - Reset Password</title>

    <script type="text/javascript" src="js/jquery.min.js"></script>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <script defer type="text/javascript" src="js/bootstrap.bundle.min.js"></script>

    <style>
        body {
          display: -ms-flexbox;
          display: flex;
          -ms-flex-align: center;
          align-items: center;
          padding-top: 40px;
          padding-bottom: 40px;
          background-image: url('bg3.png');
          height:100vh;
          background-size: cover;
        }
        .form-login {
          width: 100%;
          max-width: 330px;
          padding: 15px;
          margin: auto;
        }
        .form-login .checkbox {
          font-weight: 400;
        }
        .form-login .form-control {
          position: relative;
          box-sizing: border-box;
          height: auto;
          padding: 10px;
          font-size: 16px;
        }
        .form-login .form-control:focus {
          z-index: 2;
        }
        #password {
          margin-bottom: -1px;
          border-bottom-right-radius: 0;
          border-bottom-left-radius: 0;
        }
        #confirm {
          margin-bottom: 10px;
          border-top-left-radius: 0;
          border-top-right-radius: 0;
        }
      </style>
  </head>
  <body>
    <script type="text/javascript" src="js/jquery.min.js"></script>
    <script defer type="text/javascript" src="js/bootstrap.bundle.min.js"></script>

    <script>
      const failed = window.location.search.includes('failed');
      if (failed) window.alert('Password reset failed!');
    </script>

    <div class="container" style="width: 24rem;">
      <div class="card text-center">
        <form class="form-login" id="form" action="/auth/reset" method="post">
          <img class="mb-4" src="favicon.ico" alt="" width="128" height="128">
          <h1 class="h3 mb-3 font-weight-normal">Reset Password</h1>

          <input class="form-control mt-3 mb-0" type="password" id="password" name="password" placeholder="New password">
          <input class="form-control mt-0 mb-3" type="password" id="confirm" name="confirm" placeholder="Confirm password">
          <input class="form-control mb-3" type="text" id="forgot" name="forgot" placeholder="New Secret Phrase for password reset" required>
          <input type="hidden" id="TEGid" name="TEGid" value="<%= TEGid %>">
          <input type="hidden" id="token" name="token" value="<%= token %>">
          <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
        </form>
      </div>
    </div>
  </body>
</html>
